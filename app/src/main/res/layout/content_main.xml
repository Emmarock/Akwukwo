<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="#A2D8E2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="f  connect with facebook"
            android:background="#3D6DC8"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpButton"
            android:layout_centerHorizontal="true"
            android:text="g  connect with google"
            android:textStyle="bold"
            android:background="#E44939"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textAllCaps="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/sign_in_button"
            android:gravity="center"
            android:weightSum="1"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="#CCCCCC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                />
        </LinearLayout>


        <Button
            android:id="@+id/email_button"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_in_button"
            android:layout_centerHorizontal="true"
            android:text="login"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:background="#31C3D6"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:onClick="loginPage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/email_button"
            android:gravity="center">

            <TextView
                android:id="@+id/open_login_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup"
                android:textSize="15sp"
                android:textColor="#000000"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Sign up"
                android:textAllCaps="false"
                android:background="#ffffff"
                android:textColor="#E44939"
                android:layout_marginLeft="20dp"
                android:onClick="signUpPage"/>
        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>
