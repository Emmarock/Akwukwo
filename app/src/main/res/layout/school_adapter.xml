<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9">

    <android.support.v7.widget.CardView
        android:background="#20ffffff"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:id="@+id/detailsCardView"
        android:layout_gravity="center"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_from_firebase"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="School Name"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:paddingLeft="25dp"
                android:textColor="#212121"/>

            <ImageView
                android:id="@+id/image_from_firebase"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:src="@drawable/pic"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/vision"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Cards provide context and an entry point to more robust information and views, and their content and quantity can vary greatly. "
            android:layout_marginTop="90dp"
            android:paddingLeft="25dp"
            android:textColor="#212121"
            android:lineSpacingExtra="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/whats_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More details"
            android:textColor="#5C6BC0"
            android:textStyle="bold"
            android:layout_marginTop="170dp"
            android:paddingLeft="250dp" />


    </android.support.v7.widget.CardView>


</LinearLayout>