<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sign_up_acitivity"
    tools:context="hk.ust.cse.comp107x.schoolapp.LandingPages.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN WITH EMAIL"
        android:textScaleX="1.15"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/user_email_login"
        android:layout_toStartOf="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:id="@+id/user_email_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Email "
        android:layout_centerInParent="true"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        android:lines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/user_password_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/user_email_login"
        android:layout_alignStart="@+id/user_email_login"
        android:lines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"/>

    <Button
        android:id="@+id/login_user"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        android:onClick="login"
        android:layout_below="@+id/user_password_login"
        android:layout_alignStart="@+id/user_password_login"
        android:layout_marginTop="50dp"
        android:background="#31C3D6"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:onClick="forgotPassword"
        android:id="@+id/textView"
        android:layout_below="@+id/login_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="italic"/>

</RelativeLayout>
